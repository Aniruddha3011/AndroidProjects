<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FEEBED"
    android:orientation="vertical"
    android:padding="24dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#6530B2"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="8dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/userwoman"
                android:layout_marginTop="10dp"
                app:civ_border_color="@color/black"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Upload Image"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view"
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:background="@drawable/linear_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginBottom="7dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etfirst"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="First"
                        android:layout_weight="1"
                        android:textColorHint="#564A4A"
                        android:textColor="@color/black"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/edittext_bg"
                        android:padding="12dp"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/etmiddle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Middle"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textColorHint="#564A4A"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/edittext_bg"
                        android:padding="12dp"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/etlast"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Last"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:textColorHint="#564A4A"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bg"
                        android:padding="12dp"
                        android:inputType="textPersonName" />

                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/linear_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text="Personal Information"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textColorHint="#564A4A"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/etphone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textColorHint="#564A4A"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="phone" />

            </LinearLayout>


            <EditText
                android:id="@+id/etEmergencyContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Emergency Contact"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:textColor="@color/black"
                android:layout_marginTop="12dp"
                android:textColorHint="#564A4A"
                android:layout_marginBottom="7dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="phone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/linear_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text="Address "
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ethouseno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="House No"
                    android:layout_weight="1"
                    android:layout_marginEnd="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="#564A4A"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="textPostalAddress" />

                <EditText
                    android:id="@+id/etlandmark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Landmark"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_marginStart="7dp"
                    android:textColorHint="#564A4A"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="textPostalAddress"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etRoad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Road"
                    android:textColorHint="#564A4A"
                    android:layout_weight="1"
                    android:layout_marginEnd="7dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="textPostalAddress"/>

                <EditText
                    android:id="@+id/etPincode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Pincode"
                    android:textColorHint="#564A4A"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="number"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etcity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:textColorHint="#564A4A"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="textPostalAddress"/>

                <EditText
                    android:id="@+id/etstate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="State"
                    android:textColorHint="#564A4A"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="textPostalAddress"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/linear_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Occupation "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/etOccupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Occupation (Optional)"
                android:layout_marginStart="7dp"
                android:textColorHint="#564A4A"
                android:textColor="@color/black"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="text" />


        </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="horizontal">

               <androidx.appcompat.widget.AppCompatButton
                   android:id="@+id/btnRegister"
                   android:layout_width="150dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"
                   android:background="@drawable/signupbutton_bg"
                   android:backgroundTint="#E91E63"
                   android:padding="12dp"
                   android:layout_marginBottom="30dp"
                   android:text="Submit"
                   android:textColor="#FFFFFF"
                   android:textSize="16sp" />

           </LinearLayout>







        </LinearLayout>
    </ScrollView>
</LinearLayout>
