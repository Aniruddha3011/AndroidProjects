<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1919"
    android:padding="24dp">

    <!-- Incoming Call Title -->
    <TextView
        android:id="@+id/incomingCallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incoming Call"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#A09D9D"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Circular Caller Image -->
    <ImageView
        android:id="@+id/callerImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/incomingCallText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:padding="25dp"
        android:src="@drawable/person2"
        android:background="@drawable/gray" />

    <!-- Caller Name -->
    <TextView
        android:id="@+id/callerNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mom"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_below="@id/callerImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Caller Number -->
    <TextView
        android:id="@+id/callerNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 8208331164"
        android:textSize="25sp"
        android:textColor="#EEEEEE"
        android:layout_below="@id/callerNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- Answer Button -->
    <ImageView
        android:id="@+id/answerBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="40dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/call"
        android:background="@drawable/green"
        android:contentDescription="Answer Call"
        android:scaleType="centerInside"
        android:adjustViewBounds="true" />

    <!-- Decline Button -->
    <ImageButton
        android:id="@+id/declineBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#FF3A3A"
        android:background="@drawable/button_bg"
        android:src="@drawable/callreject"
        android:contentDescription="Decline Call"
        android:scaleType="centerInside"
        android:adjustViewBounds="true" />
</RelativeLayout>
