<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".Screens.AddressActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3 of 3"
            android:textSize="14sp"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_above="@+id/buttonContainer"
        android:layout_marginTop="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp"
            android:background="@drawable/linear_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp" />

            <!-- House No & Landmark -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ethouseno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="House No"
                    android:layout_weight="1"
                    android:layout_marginEnd="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="#564A4A"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="textPostalAddress" />

                <EditText
                    android:id="@+id/etlandmark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Landmark"
                    android:layout_weight="1"
                    android:layout_marginStart="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="#564A4A"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="textPostalAddress" />
            </LinearLayout>

            <!-- Road & Pincode -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etRoad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Road"
                    android:layout_weight="1"
                    android:layout_marginEnd="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="#564A4A"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="textPostalAddress" />

                <EditText
                    android:id="@+id/etPincode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Pincode"
                    android:layout_weight="1"
                    android:layout_marginStart="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="#564A4A"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="number" />
            </LinearLayout>

            <!-- City & State -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etcity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:layout_weight="1"
                    android:layout_marginEnd="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="#564A4A"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="textPostalAddress" />

                <EditText
                    android:id="@+id/etstate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="State"
                    android:layout_weight="1"
                    android:layout_marginStart="7dp"
                    android:textColor="@color/black"
                    android:textColorHint="#564A4A"
                    android:background="@drawable/edittext_bg"
                    android:padding="12dp"
                    android:inputType="textPostalAddress" />
            </LinearLayout>

            <!-- Submit Button inside scroll -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_gravity="center"
                android:minWidth="150dp"
                android:layout_margin="16dp"
                android:textColor="@android:color/white"
                android:background="@drawable/signupbutton_bg" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation Buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Previous"
            android:textColor="@android:color/white"
            android:background="@drawable/signupbutton_bg" />
    </LinearLayout>

</RelativeLayout>
