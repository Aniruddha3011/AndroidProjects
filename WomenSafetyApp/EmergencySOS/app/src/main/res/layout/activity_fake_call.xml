<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"
    tools:context=".Screens.FakeCallActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/fake_call_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fake Call Feature"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="15dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="18sp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeStepGranularity="2sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulate an incoming call to discreetly exit uncomfortable situations."
            android:textSize="20sp"
            android:textColor="#777777"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="14sp"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeStepGranularity="1sp" />

        <!-- Caller Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caller Name:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTextCallerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:hint="Mom"
            android:textColorHint="#AAAAAA"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Call Delay -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Delay (seconds):"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTextDelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:inputType="number"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:hint="5"
            android:textColorHint="#AAAAAA"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Ringtone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ringtone:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerRingtone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="16dp" />

        <!-- Fake Voice -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fake Voice Recording:"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerFakeVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="24dp" />

        <!-- Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonInitiateFakeCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž  Initiate Fake Call"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="16dp"
            android:background="@drawable/signupbutton_bg"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="14sp"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeStepGranularity="1sp"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>
</ScrollView>
