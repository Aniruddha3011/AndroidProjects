<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ongoingrelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1919"
    tools:context=".Screens.OngoingActivity">



    <!-- Caller Name -->
    <TextView
        android:id="@+id/callerNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mom"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <TextView
        android:id="@+id/callerNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 8208331164"
        android:textColor="#AAAAAA"
        android:textSize="18sp"
        android:layout_below="@id/callerNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />


    <!-- Call Timer -->
    <TextView
        android:id="@+id/callTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="#BBBBBB"
        android:textSize="25sp"
        android:layout_below="@id/callerNumberText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- Call Options Row -->
    <LinearLayout
        android:id="@+id/callOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/callTimer"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="150dp">

        <!-- Mute -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/muteButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerInside"
                android:src="@drawable/baseline_mic_off_24"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mute"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Keypad -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/keypadButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerInside"
                android:src="@drawable/outline_background_dot_small_24"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Keypad"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Speaker -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/speakerButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerInside"
                android:src="@drawable/outline_sound_detection_loud_sound_24"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Speaker"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/callOptions"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <!-- Add Call -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/addCallButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/baseline_add_24"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Call"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- FaceTime -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/facetimeButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/baseline_video_camera_front_24"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FaceTime"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Contacts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/contactsButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/baseline_person_24"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- End Call Button -->
    <ImageButton
        android:id="@+id/endCallButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/decline_button_bg"
        android:src="@drawable/baseline_call_end_24"
        android:scaleType="centerInside"
        app:tint="#FFFFFF" />
</RelativeLayout>
